<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.reisshie.vkgroupreader.MainActivity">

    <TextView
        android:text="Group Info: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_status_label"
        android:layout_below="@+id/btn_save_group"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Group is not loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_save_group"
        android:layout_toEndOf="@+id/tw_status_label"
        android:layout_marginStart="15dp"
        android:id="@+id/tw_group_info" />

    <Button
        android:text="Load Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_load_group"
        android:layout_alignBaseline="@+id/btn_save_group"
        android:layout_alignBottom="@+id/btn_save_group"
        android:layout_toStartOf="@+id/btn_save_group" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/et_enter_group"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tw_enter_group" />

    <TextView
        android:text="Enter group ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_enter_group"
        android:layout_alignBaseline="@+id/et_enter_group"
        android:layout_alignBottom="@+id/et_enter_group"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_group"
        android:layout_below="@+id/et_enter_group"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
